- present @project do |presenter|
  %article#project
    %header
      %h1.project_name= presenter.name.camelcase
      %h2.project_path= presenter.path
    %section#files
      - if @files.any?
        %header
          .path
            File path
          .elapsed
            Total Time
          .clearfix
        = partial('file', collection: @files)
      - else
        No files available for the selected date range.